<div class="container-fluid d-flex flex-column align-items-center">
  <%= link_to 'Add a new category', new_group_path, class: "btn btn-primary" %>
  <% unless @groups.empty? %>
    <% @groups.each do |group| %>
      <div class="card mt-3 mb-1" style="width: 95%;">
        <div class="card-body d-flex">
          <div class="w-25">
            <img src=<%= group.icon %> class="category-icon" alt="category icon">
          </div>
          <div class="w-75 d-flex justify-content-between align-items-center mx-2">
            <div class="d-flex flex-column justify-content-center">
              <h5 class="card-title category-name"><%=group.name%></h5>
              <p class="card-text mt-2"><small class="text-muted"><%=group.created_at.strftime("%d %b %Y")%></small></p>
            </div>
            <p class="card-text fw-semibold">$20</p>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <h3 class="mt-4">You don't have any categories yet.</h2>
  <% end %>
</div>